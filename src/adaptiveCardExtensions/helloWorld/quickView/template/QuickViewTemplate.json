{
  "type": "AdaptiveCard",
  "body": [
      {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "${nombre}",
          "wrap": true,
          "style": "heading"
      },
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "items": [
                      {
                          "type": "Image",
                          "style": "Person",
                          "url": "${profileImage}",
                          "size": "Small"
                      }
                  ],
                  "width": "auto"
              },
              {
                  "type": "Column",
                  "items": [
                      {
                          "type": "TextBlock",
                          "weight": "Bolder",
                          "text": "${NombrePila}",
                          "wrap": true
                      }
                  ],
                  "width": "stretch"
              }
          ]
      },
      {
          "type": "TextBlock",
          "text": "Profesión: ' ${puestoTrabajo} '",
          "wrap": true
      },
      {
          "type": "TextBlock",
          "text": "Correo electrónico: ' ${correo} '",
          "wrap": true
      },
      {
          "type": "TextBlock",
          "text": "Número de teléfono: ' ${telefono} '",
          "wrap": true
      }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}